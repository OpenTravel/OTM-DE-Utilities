                  <Insets bottom="10.0" />
               </opaqueInsets>
            </Button>
            <Button fx:id="dialogButtonClose" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="75.0" styleClass="button-red" stylesheets="@DavesViper.css" text="Close" textAlignment="CENTER">
               <opaqueInsets>
                  <Insets bottom="10.0" />
               </opaqueInsets>
            </Button>
         </buttons>
      </ButtonBar>
   </bottom>
   <center>
      <TextArea fx:id="dialogText" editable="false" styleClass="text" stylesheets="@DavesViper.css" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
